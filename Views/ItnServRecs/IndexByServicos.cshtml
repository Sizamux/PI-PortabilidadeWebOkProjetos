@model IEnumerable<PI_PorrtabilidadeWebOkPrrojetos.Models.ItnServRec>

@{
    ViewData["Title"] = "IndexByServicos";
}

<h1 class="display-5">Listas de Itens do serviço</h1>
<p>
    @foreach (var item in Model)
    {
        <a asp-controller="ItnServRecs" asp-action="Create" asp-route-IdOrdServ="@item.IdOrdServ">Criar Novo Itens</a>
        break;
    }
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Id Nota Fiscal
            </th>
            <th>
                Id de Serviço
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDeCriacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UltimaModificacao)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.Id)
                </th>
                <td>
                    <a asp-controller="OrdRecebimentoes" asp-action="Details" asp-route-id="@item.IdOrdRec"> @Html.DisplayFor(modelItem => item.IdOrdRec)</a>
                </td>
                <td>
                    <a asp-controller="OrdServicoes" asp-action="Details" asp-route-id="@item.IdOrdServ"> @Html.DisplayFor(modelItem => item.IdOrdServ)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)  
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataDeCriacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UltimaModificacao)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>